<resources>

    <style name="AppTheme" parent="AppTheme.Base" />
    <!-- Base application theme. -->
    <style name="AppTheme.Base" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/color_control_normal</item>
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="textInput" parent="AppTheme">
        <item name="colorControlActivated">@color/white</item>
        <item name="android:textColorHint">@color/white</item>
    </style>

    <style name="TextLabelError" parent="TextAppearance.Design.Error">
        <item name="android:textSize">10sp</item>
        <item name="fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="TextLabelSmall" parent="TextAppearance.Design.Hint">
        <item name="android:textSize">12sp</item>
    </style>

    <style name="AppTheme.NavigationView">
        <item name="colorPrimary">@color/white</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
        <item name="android:textSize">15sp</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="TabTextStyle" parent="@android:style/TextAppearance.Medium">
        <item name="android:textSize">10sp</item>
    </style>

    <style name="NavigationViewTextAppearance">
        <item name="android:ellipsize">end</item>
        <item name="android:fontFamily">@font/montserrat_regular</item>
    </style>

    <style name="MyDialogTheme" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="android:background">@android:color/transparent</item>
    </style>
</resources>
